<!--ご要望フォーム-->
<%= form_tag("/requests/create") do %>

    <!--エラーメッセージの表示-->
    <% @request.errors.full_messages.each do |message| %>
        <div>
            <%= message %>
        </div>
    <% end %>

    <!--#各値の入力欄-->
    <div>
        user_name
        <textarea name="user_name"><%= @request.user_name %></textarea>
    </div>

    <div>
        email
        <textarea name="email"><%= @request.email %></textarea>
    </div>

    <div>
        content
        <textarea name="content"><%= @request.content %></textarea>
    </div>

    <!--#送信ボタン-->
    <input type="submit" value="内容を確定して送信する">

<% end %>