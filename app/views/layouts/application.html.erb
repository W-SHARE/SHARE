<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/5562031081.js" crossorigin="anonymous"></script>
    <link href="https://use.fontawesome.com/releases/v6.6.1/css/all.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/701f54efca.js" crossorigin="anonymous"></script>
    <%= favicon_link_tag('favicon.jpg') %>
  </head>

  <body> 
    <!--ヘッダーのリンク-->
    <div class="header">
      <img class="header-logo" src="../../assets/logo.jpg">
        <%= link_to("トップページ", "/", {class: "hlist"}) %>
        <% if @current_user %><!-- ログインしている状態 -->
          <%= link_to("授業一覧", "/courses/index", {class: "hlist"}) %>
          <%= link_to("ご要望", "/requests/new", {class: "hlist"}) %>
          <%= link_to("ログアウト", "/logout", {method:"post", class: "hlist"}) %>
          <% if @current_user.id != 1%>
            <%= link_to("/users/#{@current_user.id}", {class: "hlist"} ) do%>
              <span class="fa-solid fa-user"></span>
          <% end%>
          <% else%>
          <% end%>
        <% else %><!-- ログインしていない状態 -->
          <%= link_to("新規登録", "/signup", {class: "hlist"} )%>
          <%= link_to("ログイン", "/login", {class: "hlist"} )%>
        <% end %>
        <div class="hamburger-menu">
          <input type="checkbox" id="menu-btn-check">
          <label for="menu-btn-check" class="menu-btn"><span></span></label>
          <!--ここからメニュー-->
          <div class="menu-content">
              <ul>
                  <li>
                    <%= link_to("トップページ", "/") %>
                  </li>
                  <% if @current_user %><!-- ログインしている状態 -->
                    <li>
                      <%= link_to("授業一覧", "/courses/index") %>
                    </li>
                    <li>
                      <%= link_to("ご要望", "/requests/new") %>
                    </li>
                    <li>
                      <%= link_to("ログアウト", "/logout", {method:"post"}) %>
                    </li>
                    <% if @current_user.id != 1%>
                      <li>
                        <%= link_to("ユーザー情報","/users/#{@current_user.id}" )%>
                      </li>
                    <% else%>
                    <% end%>
                  <% else %><!-- ログインしていない状態 -->
                    <li>
                      <%= link_to("新規登録", "/signup" )%>
                    </li>
                    <li>
                      <%= link_to("ログイン", "/login" )%>
                    </li>
                  <% end %>
              </ul>
          </div>
          <!--ここまでメニュー-->
        </div>
    </div>
    <!--ヘッダーの下、コンテンツの上に一時的ナメッセージを表示-->
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
    <div class="Followus">
      <p class="title3">
        Follow us!!
      </p>
      <div class="followicon_container">
        <div class="followicon">
          <a href="https://www.twitter.com/waseda_share"><i class="follow use_icon fa-brands fa-twitter"></i></a>
          <a href="https://www.instagram.com/wshare1122"><i class="follow use_icon fa-brands fa-instagram-square"></i></a>
          <a href="https://www.youtube.com/channel/UCU6Qek05tGIduYJle3zqZQA"><i class="follow use_icon fa-brands fa-youtube"></i></a>
        </div>
      </div>
      <div class="inner-description">
        <p>
          version 1.0.1
        </p>
        <p>
          powered by W-SHARE
        </p>
      </div>
    </div>
  </body>
</html>
