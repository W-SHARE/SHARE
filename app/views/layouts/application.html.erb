<!DOCTYPE html>
<html>
  <head>
    <title>SHAREapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <!--ヘッダーのリンク-->
    <header>
    <% current_user = User.find_by(id:session[:user_id]) %>
    <%= link_to("トップページ", "/") %>
    <%= link_to("W-SHAREとは？", "/about") %>
    <%= link_to("ご要望", "/requests/new") %>
    <% if current_user %>
      <!-- ログインしている状態 -->
        <%= link_to("授業一覧", "/courses/index") %>
        <%= link_to("研究室一覧", "/labs/index") %>
        <%= link_to("ユーザー一覧", "/users/index") %>
        <%= link_to("ログアウト", "/logout", {method:"post"}) %>
        <%= link_to(current_user.name, "/users/#{current_user.id}") %>
    <% else %>
      <!-- ログインしていない状態 -->
        <%= link_to("新規登録", "/signup") %>
        <%= link_to("ログイン", "/login") %>
    <% end %>
    </header>

    <!--ヘッダーの下、コンテンツの上に一時的ナメッセージを表示-->
    <%= flash[:notice] %>

    <%= yield %>
  </body>
</html>
