<!--#授業名を表示-->
<%= @course.name%>

<!--#フォーム-->
<%= form_tag("/review_courses/#{params[:course_id]}/create") do %>

<!--#エラーメッセージ-->
    <% @review.errors.full_messages.each do |message| %>
        <div>
            <%= message %>
        </div>
    <% end %>

    <!--#各値の入力欄-->
    <div>
        user_name
        <textarea name="user_name"><%= @review.user_name %></textarea>
    </div>

    <div>
        difficulity
        <textarea name="difficulity"><%= @review.difficulity %></textarea>
    </div>

    <div>
        fun
        <textarea name="fun"><%= @review.fun %></textarea>
    </div>

    <div>
        grade
        <textarea name="grade"><%= @review.grade %></textarea>
    </div>

    <div>
        attendance
        <textarea name="attendance"><%= @review.attendance %></textarea>
    </div>

    <div>
        free_review
        <textarea name="free_review"><%= @review.free_review %></textarea>
    </div>

    <!--#送信ボタン-->
    <div>
        <input type="submit", value="内容を確定して投稿する">
    </div>
<% end %>